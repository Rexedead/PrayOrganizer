<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/pray_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/pray_fav_img"
        android:layout_toRightOf="@+id/pray_fav_img"
        android:text="header-title"
        android:textAlignment="center"
        android:textColor="@color/title"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pray_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pray_header"
        android:gravity="start"
        android:text="TextView"
        android:paddingTop="@dimen/row_padding_vertical"
        android:textAlignment="center"
        android:textColor="@color/title" />

    <CheckBox
        android:id="@+id/pray_fav_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pray_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:button="@drawable/fav_button"
        />

</RelativeLayout>